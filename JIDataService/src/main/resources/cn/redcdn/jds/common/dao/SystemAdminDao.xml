<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.redcdn.jds.common.dao.SystemAdminDao">
    <resultMap type="cn.redcdn.jds.common.entity.SystemAdmin" id="systemAdminMap">
        <!--  -->
        <id column="id" property="id"/>
        <!-- 账号 -->
        <result column="account" property="account"/>
        <!-- 密码 -->
        <result column="password" property="password"/>
        <!-- 姓名 -->
        <result column="name" property="name"/>
    </resultMap>

    <!-- 将数据插入数据库中 -->
    <insert id="insert" parameterType="cn.redcdn.jds.common.entity.SystemAdmin">
        INSERT INTO
        system_admin (
            id,
            account,
            password,
            name) 
        VALUES (
            #{id},
            #{account},
            #{password},
            #{name}) 
    </insert>

    <!-- 根据key查找数据库中信息 -->
    <select id="queryByKey" resultMap="systemAdminMap">
        SELECT
            * 
        FROM 
            system_admin 
        <where>
            id = #{id} 
        </where>
    </select>

    <!-- 根据key更新数据库中信息 -->
    <update id="updateByKey">
        Update
            system_admin
        <set>
            <if test = " account != null ">
                account = #{account},
            </if>
            <if test = " password != null ">
                password = #{password},
            </if>
            <if test = " name != null ">
                name = #{name}
            </if>
        </set>
        <where>
            id = #{id} 
        </where>
    </update>

    <!-- 根据Key删除数据库中信息 -->
    <delete id="deleteByKey">
        DELETE FROM
            system_admin 
        <where>
            id = #{id} 
        </where>
    </delete>
    <!-- 根据field查找数据库中信息 -->
    <select id="queryByField" resultMap="systemAdminMap">
        SELECT
            * 
        FROM 
            system_admin 
        <where>
               ${fieldName} = #{fieldValue} 
        </where>
    </select>

</mapper>